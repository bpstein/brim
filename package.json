{
  "name": "brim",
  "version": "0.1.0",
  "description": "Amazing picture search",
  "scripts": {
    "start-app": "cd app && ../node_modules/http-server/bin/http-server",
    "start-selenium": "./node_modules/protractor/bin/webdriver-manager start",
    "install-selenium-dependencies": "./node_modules/protractor/bin/webdriver-manager update",
    "install-bower-dependencies": "./node_modules/bower/bin/bower install",
    "test-features": "./node_modules/protractor/bin/protractor test/protractor.conf.js",
    "test-units": "./node_modules/karma-cli/bin/karma start test/karma.conf.js"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bpstein/brim.git"
  },
  "dependencies": {
    "bower": "^1.7.9",
    "coveralls": "^2.11.9",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^0.1.7",
    "karma-cli": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-junit-reporter": "^0.4.1",
    "protractor": "^3.3.0",
    "shelljs": "^0.6.0"
  },
  // "devDependencies": {
  //    "coveralls": "^2.11.9"
  // },
 "scripts": {
  "postinstall": "bower install",

  "prestart": "npm install",
  "start": "http-server -a localhost -p 8000 -c-1 ./app",

  "pretest": "npm install",
  "test": "karma start test/karma.conf.js",
  "test-single-run": "karma start test/karma.conf.js --single-run",

  "preupdate-webdriver": "npm install",
  "update-webdriver": "webdriver-manager update",

  "preprotractor": "npm run update-webdriver",
  "protractor": "protractor test/protractor.conf.js",

  "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
